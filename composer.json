{
    "name": "ryangjchandler/orbit",
    "description": "A flat-file database driver for Eloquent.",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Chandler",
            "email": "support@ryangjchandler.co.uk",
            "homepage": "https://ryangjchandler.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-pdo_sqlite": "*",
        "illuminate/console": "*",
        "illuminate/database": "^11.0",
        "illuminate/events": "^11.0",
        "illuminate/support": "^11.0",
        "spatie/laravel-package-tools": "^1.16.5",
        "spatie/yaml-front-matter": "^2.0.9",
        "symfony/yaml": "^7.1.6"
    },
    "require-dev": {
        "laravel/pint": "^1.18.1",
        "laravel/scout": "^10.11.5",
        "larastan/larastan": "^2.9.10",
        "orchestra/testbench": "^9.5.2",
        "pestphp/pest": "^2.36",
        "pestphp/pest-plugin-laravel": "^2.4",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^1.12.8",
        "phpstan/phpstan-deprecation-rules": "^1.2.1",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpunit/phpunit": "^10.5.36"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Orbit\\OrbitServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Orbit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "fmt": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
